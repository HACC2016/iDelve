<h1> My Skills</h1>

<%= link_to "Add a new skill", skill_add_url %>

<% if @skills.blank? %>
<p>Nothing yet</p>
<% else %>
<ul>
  <%= @skills.each do |item| %>
  <li>
     <%=item.description %> (<%=item.id %>)
  </li>
  <% end %>
</ul>
<% end %>

<p><%= link_to "Download my resume", skill_show_resume_url, target: '_blank' %></p>
<p><%= link_to "Home", idelve_home_url %></p>
